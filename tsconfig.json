{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceRoot": "src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2015",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".serverless/**/*", ".vscode /**/*"]
}
